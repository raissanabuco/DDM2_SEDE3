	<meta charset="utf-8">
  <title>Exemplo de onfocus com Bootstrap</title>
  <!-- Adicionando link para o Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script>
    function mostrarMensagem() {
      alert("VocÃª apertou o campo texto !");
    }
  </script>
</head>
<body>

<!-- Campo de texto estilizado com Bootstrap -->
<input type="text" class="form-control" onfocus="mostrarMensagem()" placeholder="Clique aqui para digitar">

<!-- Adicionando link para o Bootstrap JS no final do body para melhor desempenho -->
